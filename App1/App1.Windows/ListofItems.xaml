<Page
    x:Class="App1.ListofItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:Name="allItemsListView" HorizontalAlignment="Left" Height="630" Margin="36,117,0,0" VerticalAlignment="Top" Width="928" SelectionChanged="allItemsListView_SelectionChanged"/>
        <TextBlock x:Name="txtTitleAllItem" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Here is the item collection catalog table:" VerticalAlignment="Top" Width="936" Height="102" FontSize="48"/>
        <Button x:Name="backBtn" Content="Back To Menu" HorizontalAlignment="Left" Margin="1020,299,0,0" VerticalAlignment="Top" Height="159" Width="278" FontSize="36" Click="backBtn_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>
