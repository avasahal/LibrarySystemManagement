<Page
    x:Class="App1.ListofItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="txtTitleAllItem" HorizontalAlignment="Left" Margin="120,10,0,0" TextWrapping="Wrap" Text="Here is the item collection catalog table:" VerticalAlignment="Top" Width="936" Height="102" FontSize="48"/>
        <Button x:ConnectionId='1' x:Name="backBtn" Content="Back To Menu" HorizontalAlignment="Left" Margin="1020,591,0,0" VerticalAlignment="Top" Height="97" Width="278" FontSize="36"                      >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

        <ListView x:Name="allItemsListView" HorizontalAlignment="Left" Height="630" Margin="46,128,0,0" VerticalAlignment="Top" Width="928" >
            <ListView.ItemTemplate>
                <DataTemplate x:Name="adminData">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Top">
                            <TextBlock Text="Category:" />
                            <TextBlock Text="Sub Category:" />
                            <TextBlock Text="ID:" />
                            <TextBlock Text="Name:" />
                            <TextBlock Text="Writer:" />
                            <TextBlock Text="Publisher:" />
                            <TextBlock Text="Date:" />
                            <TextBlock Text="# of copies:" />
                            <TextBlock Text="Borrow Status:" />
                            
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Top">
                            <TextBlock Text="{Binding category}" />
                            <TextBlock Text="{Binding subCategory}" />
                            <TextBlock Text="{Binding isbn}" />
                            <TextBlock Text="{Binding itemName}" />
                            <TextBlock Text="{Binding author}" />
                            <TextBlock Text="{Binding publisher}" />
                            <TextBlock Text="{Binding datePrint}" />
                            <TextBlock Text="{Binding copyNumber}" />
                            <TextBlock Text="{Binding IsBorrowed}" />
                            <TextBlock/>

                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>
        <Button x:ConnectionId='2' x:Name="addBtnLink" Content="ADD" HorizontalAlignment="Left" Margin="1022,114,0,0" VerticalAlignment="Top" Height="94" Width="275" FontSize="30"                          />
        <Button x:ConnectionId='3' x:Name="editBtnLink" Content="EDIT" HorizontalAlignment="Left" Margin="1022,226,0,0" VerticalAlignment="Top" Height="88" Width="275" FontSize="30"                            />
        <Button x:ConnectionId='4' x:Name="deleteBtn" Content="DELETE" HorizontalAlignment="Left" Margin="1024,334,0,0" VerticalAlignment="Top" Height="90" Width="272" FontSize="30"                         />
        <Button x:ConnectionId='5' x:Name="borrowReturnBTN" Content="BORROW/RETURN" HorizontalAlignment="Left" Height="88" Margin="1025,457,0,0" VerticalAlignment="Top" Width="269" FontSize="24"                              />


    </Grid>
</Page>

