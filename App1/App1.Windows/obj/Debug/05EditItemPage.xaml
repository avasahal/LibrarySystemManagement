<Page
    x:Class="App1.EditItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="backBtn" Content="Back To Menu" HorizontalAlignment="Left" Margin="1043,58,0,0" VerticalAlignment="Top" Height="97" Width="278" FontSize="36"                      >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="updateBtn" Content="Update Item" HorizontalAlignment="Left" Margin="1043,634,0,0" VerticalAlignment="Top" Height="99" Width="278" FontSize="30"                        />
        <TextBlock x:Name="txtBlCategory" HorizontalAlignment="Left" Margin="40,48,0,0" TextWrapping="Wrap" Text="Main Category:" VerticalAlignment="Top" Width="290" Height="75" FontSize="32"/>
        <TextBlock x:Name="txtBlSubCategory" HorizontalAlignment="Left" Margin="40,123,0,0" TextWrapping="Wrap" Text="Sub Category:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlItemName" HorizontalAlignment="Left" Margin="40,290,0,0" TextWrapping="Wrap" Text="Item Name:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlPressDate" HorizontalAlignment="Left" Margin="40,380,0,0" TextWrapping="Wrap" Text="Item Press Date:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32" RenderTransformOrigin="0.508,-0.329"/>
        <TextBlock x:Name="txtBlItemAmount" HorizontalAlignment="Left" Margin="40,470,0,0" TextWrapping="Wrap" Text="Item Copy Amount:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlItemPublisher" HorizontalAlignment="Left" Margin="40,560,0,0" TextWrapping="Wrap" Text="Publisher:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlAuthor" HorizontalAlignment="Left" Margin="40,643,0,0" TextWrapping="Wrap" Text="Author:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <ComboBox x:Name="cmbXSubCategory" HorizontalAlignment="Left" Margin="330,115,0,0" VerticalAlignment="Top" Width="600" Height="60" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemName" HorizontalAlignment="Left" Margin="330,281,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemPrintDate" HorizontalAlignment="Left" Margin="330,364,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" PlaceholderText="dd/mm/yyyy" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxCopyNumber" HorizontalAlignment="Left" Margin="330,449,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemPublisher" HorizontalAlignment="Left" Margin="330,534,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemBookAuthor" HorizontalAlignment="Left" Margin="330,612,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBlock x:Name="txtBlCategoryValue" HorizontalAlignment="Left" Margin="330,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" Height="63" FontSize="36"/>
        <TextBlock x:Name="txtBlItemID" HorizontalAlignment="Left" Margin="40,207,0,0" TextWrapping="Wrap" Text="Item ID:" VerticalAlignment="Top" Height="59" Width="253" FontSize="33"/>
        <TextBlock x:Name="txtBlItemIDValue" HorizontalAlignment="Left" Height="59" Margin="330,197,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="600" FontSize="33"/>
        <TextBlock x:Name="txtBlIsBorrowed" HorizontalAlignment="Left" Margin="40,703,0,0" TextWrapping="Wrap" Text="Item Borrowed:" VerticalAlignment="Top" Width="258" Height="60" FontSize="32"/>
        <ComboBox x:Name="cmBxItemBorrowed" HorizontalAlignment="Left" Margin="330,695,0,0" VerticalAlignment="Top" Width="600" Height="60"/>
    </Grid>
</Page>

