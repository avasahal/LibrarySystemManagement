<Page
    x:Class="App1.EditItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="backBtn" Content="Back To Menu" HorizontalAlignment="Left" Margin="1043,58,0,0" VerticalAlignment="Top" Height="97" Width="278" FontSize="36"                      >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:ConnectionId='2' x:Name="updateBtn" Content="Update Item" HorizontalAlignment="Left" Margin="1043,634,0,0" VerticalAlignment="Top" Height="99" Width="278" FontSize="30"                        />
        <TextBlock x:Name="txtBlCategory" HorizontalAlignment="Left" Margin="29,96,0,0" TextWrapping="Wrap" Text="Main Category:" VerticalAlignment="Top" Width="290" Height="75" FontSize="32"/>
        <TextBlock x:Name="txtBlSubCategory" HorizontalAlignment="Left" Margin="40,200,0,0" TextWrapping="Wrap" Text="Sub Category:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlItemName" HorizontalAlignment="Left" Margin="40,290,0,0" TextWrapping="Wrap" Text="Item Name:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlPressDate" HorizontalAlignment="Left" Margin="40,380,0,0" TextWrapping="Wrap" Text="Item Press Date:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32" RenderTransformOrigin="0.508,-0.329"/>
        <TextBlock x:Name="txtBlItemAmount" HorizontalAlignment="Left" Margin="40,470,0,0" TextWrapping="Wrap" Text="Item Copy Amount:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlItemPublisher" HorizontalAlignment="Left" Margin="40,560,0,0" TextWrapping="Wrap" Text="Publisher:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlAuthor" HorizontalAlignment="Left" Margin="40,643,0,0" TextWrapping="Wrap" Text="Author:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <RadioButton x:Name="rdBtnBook" Content="Book" HorizontalAlignment="Left" Margin="330,90,0,0" VerticalAlignment="Top" Height="75" Width="180" FontSize="48" />
        <RadioButton x:Name="rdBtnJournal" Content="Journal" HorizontalAlignment="Left" Margin="536,90,0,0" VerticalAlignment="Top" Height="75" Width="180" FontSize="48" RenderTransformOrigin="0.5,0.5" />
        <ComboBox x:Name="cmbXSubCategory" HorizontalAlignment="Left" Margin="330,200,0,0" VerticalAlignment="Top" Width="600" Height="60" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemName" HorizontalAlignment="Left" Margin="330,290,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemPressDate" HorizontalAlignment="Left" Margin="330,380,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" PlaceholderText="dd/mm/yyyy" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxCopyNumber" HorizontalAlignment="Left" Margin="330,470,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemPublisher" HorizontalAlignment="Left" Margin="330,560,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
        <TextBox x:Name="txtBxItemBookAuthor" HorizontalAlignment="Left" Margin="330,640,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Background="#CCEAAAAA"/>
    </Grid>
</Page>

