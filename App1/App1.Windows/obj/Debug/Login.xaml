<Page
    x:Class="App1.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="loginGrid">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="456,62,0,0" TextWrapping="Wrap" Text="Welcome to the Library!" VerticalAlignment="Top" FontSize="36" Width="394"/>
        <TextBlock HorizontalAlignment="Left" Margin="456,145,0,0" TextWrapping="Wrap" Text="Enter your username and password:" VerticalAlignment="Top" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="482,261,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" FontSize="24"/>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Margin="625,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" Width="184" Height="48"/>
        <TextBlock HorizontalAlignment="Left" Margin="482,352,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" FontSize="24"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="625,333,0,0" VerticalAlignment="Top" Height="48" Width="184"/>

        <Button x:ConnectionId='1' x:Name="SignUpBTN" Content="Sign Up" HorizontalAlignment="Left" Margin="381,455,0,0" VerticalAlignment="Top" Height="87" Width="232" FontSize="18"                         Background="#FFBF7575"/>
        <Button x:ConnectionId='2' x:Name="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="688,456,0,0" VerticalAlignment="Top" FontSize="24" Height="86" Width="225"                        Background="#FFBF7575"/>
        <TextBlock HorizontalAlignment="Left" Margin="625,575,0,0" TextWrapping="Wrap" Text="Or:" VerticalAlignment="Top" FontSize="24"/>
        <Button x:ConnectionId='3' x:Name="LoginGuestBtn" Content="Login as Guest" HorizontalAlignment="Left" Margin="528,637,0,0" VerticalAlignment="Top" FontSize="24" Height="84" Width="225"                             Background="#FF3C3C3C"/>
        <Button x:ConnectionId='4' x:Name="exitBtn" Content="EXIT" HorizontalAlignment="Left" Margin="954,637,0,0" VerticalAlignment="Top" Height="84" Width="225" FontWeight="Normal" FontSize="24"                      >
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>

    </Grid>
</Page>

