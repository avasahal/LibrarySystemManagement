<Page
    x:Class="App1.AddItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/the-most-beautiful-library-in-every-us-state.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228*"/>
            <ColumnDefinition Width="455*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtBlAddItemPhrase" HorizontalAlignment="Left" Margin="5,10,0,0" TextWrapping="Wrap" Text="Add Item by entering the required fields:" VerticalAlignment="Top" Width="1050" Height="75" FontSize="40" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="txtBlCategory" HorizontalAlignment="Left" Margin="29,96,0,0" TextWrapping="Wrap" Text="Main Category:" VerticalAlignment="Top" Width="290" Height="75" FontSize="32"/>
        <TextBlock x:Name="txtBlSubCategory" HorizontalAlignment="Left" Margin="40,194,0,0" TextWrapping="Wrap" Text="Sub Category:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlItemName" HorizontalAlignment="Left" Margin="40,280,0,0" TextWrapping="Wrap" Text="Item Name:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlPressDate" HorizontalAlignment="Left" Margin="40,359,0,0" TextWrapping="Wrap" Text="Item Press Date:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32" RenderTransformOrigin="0.508,-0.329"/>
        <TextBlock x:Name="txtBlItemAmount" HorizontalAlignment="Left" Margin="40,450,0,0" TextWrapping="Wrap" Text="Item Copy Amount:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlItemPublisher" HorizontalAlignment="Left" Margin="40,543,0,0" TextWrapping="Wrap" Text="Publisher:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <TextBlock x:Name="txtBlAuthor" HorizontalAlignment="Left" Margin="40,623,0,0" TextWrapping="Wrap" Text="Author:" VerticalAlignment="Top" Width="290" Height="60" FontSize="32"/>
        <RadioButton x:ConnectionId='1' x:Name="rdBtnBook" Content="Book" HorizontalAlignment="Left" Margin="330,90,0,0" VerticalAlignment="Top" Height="75" Width="180" FontSize="48" Grid.ColumnSpan="2"                                                        />
        <RadioButton x:ConnectionId='2' x:Name="rdBtnJournal" Content="Journal" HorizontalAlignment="Left" Margin="80,90,0,0" VerticalAlignment="Top" Height="75" Width="180" FontSize="48" RenderTransformOrigin="0.5,0.5" Grid.Column="1"                        />
        <ComboBox x:Name="cmbXSubCategory" HorizontalAlignment="Left" Margin="330,186,0,0" VerticalAlignment="Top" Width="600" Height="60" FontSize="32" Grid.ColumnSpan="2" Background="#CCFFFFFF" BorderBrush="#CCFFFFFF"/>
        <TextBox x:Name="txtBxItemName" HorizontalAlignment="Left" Margin="330,273,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Grid.ColumnSpan="2" Background="#CCFFFFFF"/>
        <TextBox x:Name="txtBxItemPressDate" HorizontalAlignment="Left" Margin="330,357,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" PlaceholderText="dd/mm/yyyy" FontSize="32" Grid.ColumnSpan="2" Background="#CCFFFFFF"/>
        <TextBox x:Name="txtBxCopyNumber" HorizontalAlignment="Left" Margin="330,443,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Grid.ColumnSpan="2" Background="#CCFFFFFF"/>
        <TextBox x:Name="txtBxItemPublisher" HorizontalAlignment="Left" Margin="330,526,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Grid.ColumnSpan="2" Background="#CCFFFFFF"/>
        <TextBox x:Name="txtBxItemBookAuthor" HorizontalAlignment="Left" Margin="330,612,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="60" Width="600" FontSize="32" Grid.ColumnSpan="2" Background="#CCFFFFFF"/>
        <Button x:ConnectionId='3' x:Name="btnAddItem" Content="ADD" HorizontalAlignment="Left" Margin="557,287,0,0" VerticalAlignment="Top" Height="115" Width="278" FontSize="48" FontWeight="Bold"                          Grid.Column="1" Background="#FF303030"/>
        <Button x:ConnectionId='4' x:Name="backBtn" Content="Back To Menu" HorizontalAlignment="Left" Margin="557,577,0,0" VerticalAlignment="Top" Height="159" Width="278" FontSize="36"                       Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>

